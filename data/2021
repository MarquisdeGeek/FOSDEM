        <slug>monitoring_observability_intro</slug>
        <title>Monitoring &amp; Observability intro</title>
        <subtitle/>
        <track>Monitoring and Observability</track>
        <type>devroom</type>
        <language/>
        <abstract>&lt;p&gt;Our customary welcome.&lt;/p&gt;</abstract>
        <description></description>
        <persons>
          <person id="497">Richard Hartmann</person>
        </persons>
        <attachments>
        </attachments>
