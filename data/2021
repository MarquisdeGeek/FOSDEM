      <event id="11501">
        <start>12:45</start>
        <duration>00:45</duration>
        <room>D.apache.openoffice</room>
        <slug>openoffice_improving_localization</slug>
        <title>The localization process for Apache OpenOffice</title>
        <subtitle>Anatomy of an improvement</subtitle>
        <track>Apache OpenOffice</track>
        <type>devroom</type>
        <language/>
